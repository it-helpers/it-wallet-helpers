{
    "$id": "https://example.com/credential_pop_header.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Request URI Response header",
    "description": "Request URI Response header",
    "type": "object",
    "required": [
        "typ",
        "alg",
        "kid",
        "trust_chain"
    ],
    "properties": {
        "typ": {
            "type": "string",
            "description": "Media Type of the JWT",
            "example": "JWT"
        },
        "alg": {
            "type": "string",
            "description": "An identifier for a JWS asymmetric digital signature algorithm. It MUST NOT be none or an identifier for a symmetric algorithm",
            "example": "ES256"
        },
        "kid": {
            "type": "string",
            "description": "Key ID of the public key needed to verify the JWS signature. REQUIRED when trust_chain is used.",
            "example": "$base64url-encoded-thumprint-of-the-jwt-of-the-public-key-used-by-the-EAA-Provider-to-sign-the-request-uri-response$"
        },
        "trust_chain": {
            "type": "string",
            "description": "Sequence of Entity Statements that composes the Trust Chain related to the Relying Party",
            "example": ["MIICajCCAdOgAwIBAgIC...awz", "MIICajCCAdOgAwIBAgIC...2w3"]
        }

    }
}